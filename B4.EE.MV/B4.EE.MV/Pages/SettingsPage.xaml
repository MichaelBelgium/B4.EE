<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B4.EE.MV.Pages.SettingsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveSettings}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Units" Style="{StaticResource title}" />
            <Picker ItemsSource="{Binding UnitItems}" SelectedItem="{Binding SelectedUnit, Mode=TwoWay}"/>
            <Label Text="Auto refresh pages:" Style="{StaticResource title}"/>
            <Switch IsToggled="{Binding SelectedRefresh, Mode=TwoWay}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>